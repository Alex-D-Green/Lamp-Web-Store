@{
    ViewData["Title"] = "Account deletion";
}

<h2>@ViewData["Title"]</h2>

<br />

<form asp-action="RemoveAccount" asp-controller="Account" asp-antiforgery="true">
    <div class="form-group">
        <p>Do you confirm deletion of your account?</p>
    </div>

    <div class="form-group">
        <a asp-controller="Home" asp-action="Products" class="btn btn-default">Cancel</a>
        <input type="submit" value="Confirm deletion" class="btn btn-danger" />
    </div>
</form>
