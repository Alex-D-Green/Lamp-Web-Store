@model UserSingInViewModel
@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>

<br />

<div>
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <form asp-action="Login" asp-controller="Account" asp-antiforgery="true" class="form-horizontal">
        <div>
            <div class="form-group">
                <label asp-for="Login" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input type="text" asp-for="Login" />
                </div>
                <span asp-validation-for="Login" class="col-md-offset-2 col-md-10 text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input type="password" asp-for="Password" />
                </div>
                <span asp-validation-for="Password" class="col-md-offset-2 col-md-10 text-danger"></span>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Sing in" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>