@model ProductsViewModel

<div class="myPagination">
    @if(Model.CurrentPage > 0)
    {
        <a asp-controller="@ViewData["Controller"]" asp-action="@ViewData["Action"]"
           asp-route-sortingProp="@Model.SortingProp" asp-route-sortByAsc="@Model.SortByAsc"
           asp-route-page="@(Model.CurrentPage - 1)" class="btn btn-default btn">
            <span class="glyphicon glyphicon-chevron-left"></span> Prev
        </a>
    }
    else
    {
        <div class="btn btn-default btn disabled">
            <span class="glyphicon glyphicon-chevron-left"></span> Prev
        </div>
    }

    <span style="margin:0pt 5pt">@(Model.CurrentPage + 1) of @Model.TotalPages</span>

    @if(Model.CurrentPage+1 < Model.TotalPages)
    {
        <a asp-controller="@ViewData["Controller"]" asp-action="@ViewData["Action"]"
           asp-route-sortingProp="@Model.SortingProp" asp-route-sortByAsc="@Model.SortByAsc"
           asp-route-page="@(Model.CurrentPage + 1)" class="btn btn-default btn">
            Next <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    }
    else
    {
        <div class="btn btn-default btn disabled">
            Next <span class="glyphicon glyphicon-chevron-right"></span>
        </div>
    }
</div>