@model LampViewModel
@{
    ViewData["Title"] = "Editing the lamp";
}

<h2>@ViewData["Title"]</h2>

<br />

<div>
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <form asp-action="edit" asp-controller="home" asp-antiforgery="true" asp-route-id="@Model.Id" 
          class="form-horizontal">

        <div class="form-group">
            <label asp-for="Manufacturer" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input type="text" asp-for="Manufacturer" class="form-control" />
            </div>
            <span class="col-md-offset-2 col-md-10 text-danger" asp-validation-for="Manufacturer"></span>
        </div>

        <div class="form-group">
            <label asp-for="LampType" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select type="text" asp-for="LampType" class="form-control"
                        asp-items="@new SelectList(Enum.GetNames(typeof(LampWebStore.Models.LampType)))">
                </select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Cost" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input type="text" asp-for="Cost" class="form-control" />
            </div>
            <span class="col-md-offset-2 col-md-10 text-danger" asp-validation-for="Cost"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageRef" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input type="url" asp-for="ImageRef" class="form-control" />
            </div>
            <span class="col-md-offset-2 col-md-10 text-danger" asp-validation-for="ImageRef"></span>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a asp-controller="Home" asp-action="Products" class="btn btn-default">Cancel</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
